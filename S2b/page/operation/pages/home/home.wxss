.userinfo {
  display: flex;
  flex-direction: row;
  padding: 20rpx 0% 60rpx 60rpx;
  align-items: center;
  background:-webkit-gradient(linear,center bottom,center top,from(#95E2EC), to(#01bbd2));
}

.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
}

.classname_a {
  display: flex;
  flex-direction: row;
}

.classname {
  display: flex;
  flex-direction: column;
  width: 50%;
  font-size: 32rpx;
  text-align: center;
}
.classname_noTop{
   display: flex;
  flex-direction: column;
  width: 50%;
  font-size: 32rpx;
  padding-left: 40rpx;
}
.text_a {
  border-bottom: 2rpx solid #f5f5f5;
}

.text_border {
  font-size: 32rpx;
  border-left: 10rpx solid #01bbd2;
  padding-left: 10rpx;
  font-weight:600 ;
}

.item_text {
  padding-bottom: 60rpx;
}

.item_paading {
  padding-top: 16rpx;
  padding-bottom: 16rpx;
}
.pb{
 padding-bottom: 20rpx;
}
.mb{
  margin-bottom: 20rpx;
}

.text_mb{
  margin-bottom: 10rpx;
}
.tabbar_box{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 120rpx;
    border-top: 1rpx solid gainsboro; 
}

.tabbar_nav{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    height: 100%;
}

.tabbar_icon{
    width: 61rpx;
    height: 61rpx;
}
