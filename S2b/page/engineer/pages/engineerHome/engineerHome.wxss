.tabbar_box{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 120rpx;
    border-top: 1rpx solid gainsboro; 
}

.tabbar_nav{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    height: 100%;
}

.tabbar_icon{
    width: 61rpx;
    height: 61rpx;
}
.userinfo {
  display: flex;
  flex-direction: row;
  padding: 20rpx 0% 60rpx 60rpx;
  align-items: center;
  background:-webkit-gradient(linear,center bottom,center top,from(#95E2EC), to(#01bbd2));
}

.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
}